scriptencoding utf-8
set encoding=utf-8
set fileencoding=utf-8

set number
set title
set autoindent
set smartindent
set hlsearch
set nobackup
set showcmd
set cmdheight=2
set laststatus=0
set expandtab
set scrolloff=10
set inccommand=split
set ignorecase
set smarttab
set breakindent
set shiftwidth=2
set tabstop=2
set nowrap
set backspace=start,eol,indent
set path+=**
set wildignore+=*/node_modules/*
set splitbelow
set splitright
set mouse=
set history=1000

" Add asterisks in block comments
set formatoptions+=r
